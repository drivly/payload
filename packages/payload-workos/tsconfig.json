{
  "extends": "tsconfig/src/react.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "jsx": "react",
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
