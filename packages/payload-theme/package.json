    "lint": "eslint ."
  },
  "peerDependencies": {
    "payload": "^3.33.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "18.3.20",
    "@types/react-dom": "19.0.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "tsconfig": "workspace:*",
    "eslint-config": "workspace:*"
  }
}
