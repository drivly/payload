{
  "name": "@drivly/payload-theme",
  "version": "0.0.1",
  "type": "module",
  "description": "Payload CMS theme customization plugin",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
