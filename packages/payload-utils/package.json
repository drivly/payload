{
  "name": "payload-utils",
  "version": "0.1.0",
  "type": "module",
  "description": "Payload CMS utilities for Cloudflare Workers and NextJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "build:packages": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"No tests\" && exit 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "payload",
    "cms",
    "cloudflare",
    "workers",
    "nextjs"
  ],
  "author": "Drivly",
  "license": "MIT",
  "dependencies": {
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "next": "^15.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "payload": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.8.2",
    "tsconfig": "0.0.0",
    "eslint-config": "0.1.0"
  }
}
